# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=su_curries_user
DB_PASSWORD=your_secure_password
DB_NAME=su_curries_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@sucurries.com
FROM_NAME=SU Curries

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DEST=./uploads

# Cloud Storage (AWS S3 or Cloudflare R2)
CLOUD_STORAGE_ENDPOINT=
CLOUD_STORAGE_REGION=
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_ACCESS_KEY=
CLOUD_STORAGE_SECRET_KEY=

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Payment Configuration (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Additional URLs
BASE_URL=http://localhost:3001
ADMIN_URL=http://localhost:3000/admin
ADMIN_EMAIL=admin@sucurries.com

# File Upload Enhancement
USE_S3_UPLOAD=false

# AWS S3 Configuration (if USE_S3_UPLOAD=true)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=su-curries-uploads

# GDPR Compliance
DATA_RETENTION_DAYS=2555
AUDIT_LOG_RETENTION_DAYS=2555